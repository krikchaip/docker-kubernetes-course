FROM node:18-alpine

RUN npm install -g pnpm@7.27

WORKDIR /app

# first arg -> [relative path to build "context"]
# second arg -> [path inside container]
COPY package.json .
COPY pnpm-lock.yaml .

RUN pnpm install --frozen-lockfile

COPY . .

RUN pnpm build

ARG REDIS_URL

ENV PORT=4001
ENV REDIS_URL=${REDIS_URL}

CMD ["pnpm", "start"]
